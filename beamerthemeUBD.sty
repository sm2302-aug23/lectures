% Transition slides before each section (except first section)
\newcommand{\transition}{
	\miniframesoff
	\begin{frame}[plain]
    	\tableofcontents[currentsection,hideothersubsections]
	\end{frame}
	\addtocounter{framenumber}{-1} 
	\miniframeson
}

\iftranslides
	\AtBeginSection[]{%
		\ifnum \value{section}>1
			\transition
		\else
		\fi
	}
\fi

